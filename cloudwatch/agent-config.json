{
  "agent": { "metrics_collection_interval": 60 },
  "metrics": {
    "append_dimensions": {
      "AutoScalingGroupName": "${aws:AutoScalingGroupName}",
      "InstanceId": "${aws:InstanceId}"
    },
    "metrics_collected": {
      "cpu": {
        "measurement": [
          {"name":"usage_system","rename":"CPUUsageSystem"},
          {"name":"usage_user","rename":"CPUUsageUser"},
          {"name":"usage_idle","rename":"CPUUsageIdle"}
        ],
        "total": true
      },
      "mem": { "measurement": ["used_percent"] }
    }
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          { "file_path": "/var/log/messages", "log_group_name": "/eventlink/system", "log_stream_name": "{instance_id}"},
          { "file_path": "/var/log/syslog",   "log_group_name": "/eventlink/system", "log_stream_name": "{instance_id}"},
          { "file_path": "/var/log/eventlink/gunicorn.log", "log_group_name": "/eventlink/app", "log_stream_name": "{instance_id}"}
        ]
      }
    }
  }
}
